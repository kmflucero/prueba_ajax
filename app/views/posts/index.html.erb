<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Título</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= "#{post.title}"%></td>
         <td><%= link_to "ver detalle", post,class:"btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_post_path(post), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Estás seguro que deseas eliminar el Post?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Nuevo Post', new_post_path, class: 'btn btn-primary' %>
